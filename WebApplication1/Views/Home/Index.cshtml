@model HomeIndexVM

<section class="section visit-section" id="next-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="heading" data-aos="fade-up">Popular Properties</h2>
            </div>
        </div>
        <div class="row">
            @for (int i = 0; i < 2; i++)
            {
                @foreach (var item in Model.PopularProperties)
                {
                    <div class="col-lg-3 col-md-6 visit mb-3" data-aos="fade-up">
                        <a href="property-single.html"><img src="~/img/@item.Image" alt="Image placeholder" class="img-fluid rounded"> </a>
                        <h3><a href="property-single.html">$@item.Price</a></h3>
                        <div class="reviews-star float-left">
                            @item.Title
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
<!-- END section -->
<section class="section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2>Happy Customers</h2>
            </div>
        </div>
        <div class="js-carousel-1 owl-carousel">

            @foreach (var test in Model.Testimonials)
            {
                <div class="testimonial text-center">
                    <div class="author-image mb-3">
                        <img src="~/img/@test.Image" alt="Image placeholder" class="rounded-circle">
                    </div>
                    <blockquote>
                        <p>&ldquo;@test.Comment&rdquo;</p>
                    </blockquote>
                    <p><em>&mdash; @test.Name</em></p>
                </div>
            }
        </div>
    </div>
</section>

